#pytest -q > /dev/null #only erros count

#python3 test.py

for f in input/*.pdb;do
	name=${f#input/}
	name=${name%.pdb}

	../bin/copy $f | diff - output/${name}_copy.pdb 

	../bin/renumber $f | diff - output/${name}_renumber.pdb 

	../bin/translate $f -z 50 | diff - output/${name}_translate.pdb 
	../bin/translate $f -c 0 -z 50 | diff - output/${name}_translate_0.pdb 
	../bin/translate $f -c 'A' -z 50 | diff - output/${name}_translate_0.pdb 
	../bin/translate $f -c 'a' -z 50 | diff - output/${name}_translate_0.pdb 
done
